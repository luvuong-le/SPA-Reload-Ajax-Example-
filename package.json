{
  "name": "browerify-build",
  "version": "1.0.0",
  "description": "Browserify Browser Sync Babel Gulp Build",
  "main": "index.js",
  "scripts": {
    "browserify:build": "browserify src/js/main.js -o dist/js/bundle.min.js",
    "babel:build": "babel dist/js/bundle.min.js --out-file dist/js/bundle.min.js",
    "browser:watch": "browser-sync start --proxy localhost:8000 --files 'index.php, src/scss/**/*.scss, src/js/**/*.js'",
    "browserify:watch": "watchify src/js/main.js -v -o dist/js/bundle.min.js",
    "gulp:sass": "gulp watch:sass",
    "dev": "npm-run-all --parallel browser:watch browserify:watch gulp:sass",
    "build": "npm-run-all browserify:build && gulp"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.5",
    "browserify": "^16.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-clean-css": "^3.9.4",
    "gulp-imagemin": "^4.1.0",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.3.0",
    "gulp-sass": "^4.0.1",
    "gulp-uglify-es": "^1.0.4",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "watchify": "^3.11.0"
  }
}
